-- LocalScript em StarterPlayerScripts

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local SoundService = game:GetService("SoundService")
local player = Players.LocalPlayer

-- GUI principal
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "MKGui"
screenGui.Parent = player:WaitForChild("PlayerGui")
screenGui.ResetOnSpawn = false

-- Painel principal
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 450, 0, 300)
frame.Position = UDim2.new(0.5, -225, 0.25, 0)
frame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
frame.BorderSizePixel = 0
frame.Visible = false
frame.ClipsDescendants = true
frame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 25)
corner.Parent = frame

-- Fundo com Shao Kahn
local bgImage = Instance.new("ImageLabel")
bgImage.Size = UDim2.new(1, 0, 1, 0)
bgImage.Position = UDim2.new(0, 0, 0, 0)
bgImage.Image = "rbxassetid://SEU_ASSET_ID_AQUI" -- troque pelo ID do decal de Shao Kahn
bgImage.BackgroundTransparency = 1
bgImage.ImageTransparency = 0.2
bgImage.Parent = frame

-- Símbolos do dragão MK flutuantes
for i = 1, 5 do
    local symbol = Instance.new("ImageLabel")
    symbol.Size = UDim2.new(0, 50, 0, 50)
    symbol.Position = UDim2.new(math.random(), 0, math.random(), 0)
    symbol.Image = "rbxassetid://133689035" -- logo dragão MK
    symbol.BackgroundTransparency = 1
    symbol.ImageTransparency = 0.5
    symbol.Parent = frame

    -- Animação flutuar
    coroutine.wrap(function()
        while true do
            local newPos = UDim2.new(math.random(), 0, math.random(), 0)
            TweenService:Create(symbol, TweenInfo.new(3, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {Position = newPos}):Play()
            wait(3)
        end
    end)()
end

-- Partículas de fogo
local fireParticles = Instance.new("ParticleEmitter")
fireParticles.Texture = "rbxassetid://241594314" -- textura de fogo
fireParticles.Lifetime = NumberRange.new(1, 2)
fireParticles.Rate = 10
fireParticles.Speed = NumberRange.new(5, 10)
fireParticles.Rotation = NumberRange.new(0, 360)
fireParticles.Size = NumberSequence.new({NumberSequenceKeypoint.new(0, 0.5), NumberSequenceKeypoint.new(1, 0)})
fireParticles.Parent = frame

-- Botão pegar WaterBall com glow
local getButton = Instance.new("TextButton")
getButton.Size = UDim2.new(0.5, 0, 0.25, 0)
getButton.Position = UDim2.new(0.25, 0, 0.65, 0)
getButton.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
getButton.Text = "Pegar WaterBall"
getButton.Font = Enum.Font.Arcade
getButton.TextColor3 = Color3.fromRGB(255, 215, 0)
getButton.TextScaled = true
getButton.Parent = frame

local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(0, 20)
buttonCorner.Parent = getButton

-- Glow do botão
local uiStroke = Instance.new("UIStroke")
uiStroke.Thickness = 3
uiStroke.Color = Color3.fromRGB(255, 100, 0)
uiStroke.Parent = getButton

-- Efeito hover no botão
getButton.MouseEnter:Connect(function()
    TweenService:Create(getButton, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(255, 50, 50)}):Play()
end)
getButton.MouseLeave:Connect(function()
    TweenService:Create(getButton, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(200, 0, 0)}):Play()
end)

-- Assinatura
local assinatura = Instance.new("TextLabel")
assinatura.Size = UDim2.new(1, -10, 0, 25)
assinatura.Position = UDim2.new(0, 5, 1, -35)
assinatura.BackgroundTransparency = 1
assinatura.Text = "Feito por Thi"
assinatura.Font = Enum.Font.Arcade
assinatura.TextColor3 = Color3.fromRGB(255, 215, 0)
assinatura.TextScaled = true
assinatura.Parent = frame

-- Botão fechar
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 50, 0, 50)
closeButton.Position = UDim2.new(1, -60, 0, 10)
closeButton.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
closeButton.Text = "X"
closeButton.Font = Enum.Font.SourceSansBold
closeButton.TextSize = 24
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.Parent = frame

local closeCorner = Instance.new("UICorner")
closeCorner.CornerRadius = UDim.new(0, 15)
closeCorner.Parent = closeButton

-- Botão flutuante para abrir
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0, 170, 0, 60)
toggleButton.Position = UDim2.new(0.05, 0, 0.85, 0)
toggleButton.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
toggleButton.Text = "Abrir Painel MK"
toggleButton.Font = Enum.Font.SourceSansBold
toggleButton.TextSize = 18
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.Parent = screenGui

local toggleCorner = Instance.new("UICorner")
toggleCorner.CornerRadius = UDim.new(0, 15)
toggleCorner.Parent = toggleButton

-- Som de clique
local clickSound = Instance.new("Sound")
clickSound.SoundId = "rbxassetid://12221967" -- som de clique clássico Roblox
clickSound.Volume = 1
clickSound.Parent = SoundService

local function playClick()
    clickSound:Play()
end

-- Funções abrir/fechar com fade
local function openPanel()
    playClick()
    frame.Visible = true
    frame.BackgroundTransparency = 1
    TweenService:Create(frame, TweenInfo.new(0.5), {BackgroundTransparency = 0}):Play()
end

local function closePanel()
    playClick()
    local tween = TweenService:Create(frame, TweenInfo.new(0.5), {BackgroundTransparency = 1})
    tween:Play()
    tween.Completed:Connect(function()
        frame.Visible = false
    end)
end

toggleButton.MouseButton1Click:Connect(function()
    if frame.Visible then
        closePanel()
    else
        openPanel()
    end
end)

closeButton.MouseButton1Click:Connect(function()
    closePanel()
end)

-- Dar WaterBall
local function giveTool()
    if not player.Backpack:FindFirstChild("WaterBall") then
        local tool = game.ReplicatedStorage.Powers.WaterBall:Clone()
        tool.Parent = player.Backpack
    end
end

getButton.MouseButton1Click:Connect(function()
    playClick()
    giveTool()
end)
