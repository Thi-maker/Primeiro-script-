-- LocalScript em StarterPlayerScripts

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local SoundService = game:GetService("SoundService")
local player = Players.LocalPlayer

-- GUI principal
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "MKGui"
screenGui.Parent = player:WaitForChild("PlayerGui")
screenGui.ResetOnSpawn = false

-- Painel
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 350, 0, 200)
frame.Position = UDim2.new(0.5, -175, 0.3, 0)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BorderSizePixel = 0
frame.Visible = false
frame.ClipsDescendants = true
frame.Parent = screenGui

-- Bordas arredondadas
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 15)
corner.Parent = frame

-- Fundo com imagem Shao Kahn
local bgImage = Instance.new("ImageLabel")
bgImage.Size = UDim2.new(1, 0, 1, 0)
bgImage.Position = UDim2.new(0, 0, 0, 0)
bgImage.Image = "rbxassetid://SEU_ASSET_ID_AQUI" -- <<< troque pelo ID do decal de Shao Kahn
bgImage.BackgroundTransparency = 1
bgImage.ImageTransparency = 0.15
bgImage.Parent = frame

-- Botão pegar WaterBall
local getButton = Instance.new("TextButton")
getButton.Size = UDim2.new(0.6, 0, 0.3, 0)
getButton.Position = UDim2.new(0.2, 0, 0.55, 0)
getButton.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
getButton.Text = "Pegar WaterBall"
getButton.Font = Enum.Font.Arcade
getButton.TextColor3 = Color3.fromRGB(255, 215, 0)
getButton.TextScaled = true
getButton.Parent = frame

local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(0, 10)
buttonCorner.Parent = getButton

-- Assinatura
local assinatura = Instance.new("TextLabel")
assinatura.Size = UDim2.new(1, -10, 0, 25)
assinatura.Position = UDim2.new(0, 5, 1, -30)
assinatura.BackgroundTransparency = 1
assinatura.Text = "Feito por Thi"
assinatura.Font = Enum.Font.Arcade
assinatura.TextColor3 = Color3.fromRGB(255, 215, 0)
assinatura.TextScaled = true
assinatura.Parent = frame

-- Botão fechar
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 40, 0, 40)
closeButton.Position = UDim2.new(1, -45, 0, 5)
closeButton.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
closeButton.Text = "X"
closeButton.Font = Enum.Font.SourceSansBold
closeButton.TextSize = 20
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.Parent = frame

local closeCorner = Instance.new("UICorner")
closeCorner.CornerRadius = UDim.new(0, 8)
closeCorner.Parent = closeButton

-- Botão flutuante para abrir
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0, 140, 0, 50)
toggleButton.Position = UDim2.new(0.05, 0, 0.85, 0)
toggleButton.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
toggleButton.Text = "Abrir Painel MK"
toggleButton.Font = Enum.Font.SourceSansBold
toggleButton.TextSize = 18
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.Parent = screenGui

local toggleCorner = Instance.new("UICorner")
toggleCorner.CornerRadius = UDim.new(0, 10)
toggleCorner.Parent = toggleButton

-- Som de clique
local clickSound = Instance.new("Sound")
clickSound.SoundId = "rbxassetid://12221967" -- som de clique clássico Roblox
clickSound.Volume = 1
clickSound.Parent = SoundService

local function playClick()
    clickSound:Play()
end

-- Funções de abrir/fechar com fade
local function openPanel()
    playClick()
    frame.Visible = true
    frame.BackgroundTransparency = 1
    TweenService:Create(frame, TweenInfo.new(0.5), {BackgroundTransparency = 0}):Play()
end

local function closePanel()
    playClick()
    local tween = TweenService:Create(frame, TweenInfo.new(0.5), {BackgroundTransparency = 1})
    tween:Play()
    tween.Completed:Connect(function()
        frame.Visible = false
    end)
end

-- Botões
toggleButton.MouseButton1Click:Connect(function()
    if frame.Visible then
        closePanel()
    else
        openPanel()
    end
end)

closeButton.MouseButton1Click:Connect(function()
    closePanel()
end)

-- Dar WaterBall
local function giveTool()
    if not player.Backpack:FindFirstChild("WaterBall") then
        local tool = game.ReplicatedStorage.Powers.WaterBall:Clone()
        tool.Parent = player.Backpack
    end
end

getButton.MouseButton1Click:Connect(function()
    playClick()
    giveTool()
end)
